# Telegram API Configuration
# Get these from https://my.telegram.org/apps
TELEGRAM_API_ID=your_api_id_here
TELEGRAM_API_HASH=your_api_hash_here
TELEGRAM_PHONE=your_phone_number_here
TELEGRAM_SESSION_NAME=telegram_scraper

# Database Configuration
DATABASE_URL=sqlite:///./telegram_news.db
# For PostgreSQL: DATABASE_URL=postgresql://user:password@localhost/telegram_news

# Google Cloud Storage Configuration
GCS_BUCKET_NAME=your_bucket_name
GCS_CREDENTIALS_PATH=/app/credentials/your-service-account.json

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000

# Scraping Configuration
RATE_LIMIT_DELAY=2

# Storage Configuration
IMAGES_DIR=./images
MAX_IMAGE_SIZE=5242880

# Logging Configuration
LOG_LEVEL=INFO 